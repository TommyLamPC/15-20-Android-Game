<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFA0"
    tools:context=".FindOpponents">

    <ImageView
        android:src="@drawable/find_opp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <ImageView  android:id="@+id/ivOppPlayerPic"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView   android:id="@+id/tvOppPlayerName"
        android:textSize="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button android:onClick="change"
            android:text="Change Player"
            android:layout_margin="10dp"
            android:background="#FF0000"
            android:drawableLeft= "@drawable/change"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:onClick="start"
            android:text="Game Start"
            android:layout_margin="10dp"
            android:background="#00FF00"
            android:drawableLeft= "@drawable/start"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button android:onClick="exit"
        android:text="Back To Menu"
        android:layout_margin="10dp"
        android:background="#FF0000"
        android:drawableLeft= "@drawable/exit"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>