<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFA0"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameStart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView   android:id="@+id/tvMyName"
            android:textColor="#0000FF"
            android:layout_marginLeft="2dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp" />

        <TextView
            android:textColor="#FF0000"
            android:text=" VS "
            android:layout_toLeftOf="@+id/tvOppPlayerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp" />

        <ImageView  android:id="@+id/ivOppPlayerPhoto"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right" />


        <TextView   android:id="@+id/tvOppPlayerInfo"
            android:layout_toLeftOf="@+id/ivOppPlayerPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp" />

    </RelativeLayout>

    <TextView   android:id="@+id/tvTurn"
        android:gravity="center"
        android:textColor="#FF00FF"
        android:textSize="50dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView  android:id="@+id/ivOppRightHand"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="bottom" />

        <TextView  android:id="@+id/tvOppGuess"
            android:gravity="center"
            android:textColor="#0000FF"
            android:textSize="50dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="bottom" />

        <ImageView  android:id="@+id/ivOppLeftHand"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="bottom" />

    </LinearLayout>

    <Button android:id="@+id/btnSubmit" android:onClick="submit"
        android:background="#00FF00"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView  android:id="@+id/ivMyLeftHand"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="right" />

        <TextView  android:id="@+id/tvMyGuess"
            android:gravity="center"
            android:textColor="#0000FF"
            android:textSize="50dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="right" />

        <ImageView  android:id="@+id/ivMyRightHand"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton    android:onClick="LeftOpen"
            android:src="@drawable/my_open_hand_l"
            android:background="#FFFFA0"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageButton    android:onClick="LeftClose"
            android:src="@drawable/my_close_hand_l"
            android:background="#FFFFA0"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageButton    android:onClick="RightClose"
            android:src="@drawable/my_close_hand_r"
            android:background="#FFFFA0"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageButton    android:onClick="RightOpen"
            android:src="@drawable/my_open_hand_r"
            android:background="#FFFFA0"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button android:id="@+id/btnGuess0" android:onClick="guess0"
            android:textSize="30dp"
            android:text="0"
            android:background="#FFFFA0"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/btnGuess5" android:onClick="guess5"
            android:textSize="30dp"
            android:text="5"
            android:background="#FFFFA0"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/btnGuess10"    android:onClick="guess10"
            android:textSize="30dp"
            android:text="10"
            android:background="#FFFFA0"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/btnGuess15"    android:onClick="guess15"
            android:textSize="30dp"
            android:text="15"
            android:background="#FFFFA0"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/btnGuess20"    android:onClick="guess20"
            android:textSize="30dp"
            android:text="20"
            android:background="#FFFFA0"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>